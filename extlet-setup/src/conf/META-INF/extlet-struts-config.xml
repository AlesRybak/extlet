<struts-config>
	<message-resources parameter="content.Language,content.Language-ext" factory="com.liferay.portal.struts.ExtletMultiMessageResourcesFactory" />
	<plug-in className="com.liferay.portal.struts.ExtletPortalTilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml,/WEB-INF/tiles-defs-ext.xml,META-INF/extlet-tiles-defs.xml" />
